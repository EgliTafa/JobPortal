@model JobPortal.ViewModels.ChangePasswordViewModel

<head>
    <style>
        footer{
            display:none;
        }

        html, body {
            height: 100%;
        }


        form {
            padding-top: 10px;
            font-size: 13px;
            margin-top: 30px;
        }

        .card-title {
            font-weight: 300;
        }

        .btn {
            font-size: 13px;
        }

        .login-form {
            text-align:center;
            width: 30%;
            margin: 20px;
        }

        .sign-up {
            text-align: center;
            padding: 20px 0 0;
        }

        span {
            font-size: 14px;
        }

        .submit-btn {
            margin-top: 20px;
        }

        .card{
            margin-left:30%;
        }

        @@media screen and (max-width: 480px) {
            .login-form {
                text-align: center;
                width: 90%;
                margin: 20px;
            }
        }
    </style>
</head>

<body>
    <div class="card login-form" >
        <div>
            <div class="card-body">
                <h3 class="card-title text-center">Ndryshoni Fjalëkalimin</h3>

            <!--Password must contain one lowercase letter, one number, and be at least 7 characters long.-->

            <div class="card-text">
                <form method="post">
                    <label asp-for="Password">Fjalëkalimi Aktual</label>
                    <div class="form-group pass_show">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Fjalëkalimi Aktual">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <label asp-for="Password">Fjalëkalimi i Ri</label>

                    <div class="form-group pass_show">
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Fjalëkalimi i Ri">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <label asp-for="ConfirmPassword">Konfirmoni Fjalëkalimin</label>
                    <div class="form-group pass_show">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Konfirmoni Fjalëkalimin">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-outline-danger text-center" style="left:50px;">Përditsoni Fjalëkalimin</button>
                </form>
            </div>
        </div>
        </div>
    </div>
</body>

