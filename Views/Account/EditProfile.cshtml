@using Microsoft.AspNetCore.Identity
@model User
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

@{
    ViewBag.Title = "User Profile";
    Layout = "_Layout";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Job-Edit.css" />

</head>

<section>
    <div class="container">
        <div class="row gutters">
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="account-settings">
                            <div class="user-profile">
                                <div class="user-avatar">
                                    <img src="@Model.ImagePath" alt="User PFP">
                                </div>
                                <h5 class="user-name">@Model.FirstName @Model.LastName</h5>
                                <h6 class="user-email">@Model.Email</h6>
                            </div>
                            @*<div class="about">
                                    <h5>About</h5>
                                    <p>@Model.Description</p>
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                            @Html.ValidationSummary()
                            @Html.AntiForgeryToken()
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 text-primary">Profili Im</h6>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        @Html.LabelFor(c => c.FirstName, "Emri")
                                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        @if (this.User.IsInRole("Employer") && SignInManager.IsSignedIn(User))
                                        {
                                            @Html.LabelFor(c => c.LastName, "Adresa")
                                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                        }
                                        else
                                        {
                                            @Html.LabelFor(c => c.LastName, "Mbiemri")
                                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                        }
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        @Html.LabelFor(c => c.PhoneNumber, "Numri i Telefonit")
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        @Html.LabelFor(c => c.Email, "E-Mali")
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <div> <label>Ndryshoni foton e profilit</label></div>
                                        <div>
                                            <input type="file" name="upload" accept="image/png, image/gif, image/jpeg" class="form-control" />
                                            <input asp-for="ImagePath" type="hidden" value="@Model.ImagePath" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label>Gjinia</label><br />
                                        <div class="form-check form-check-inline">
                                            @Html.RadioButtonFor(x => x.Gender, "Mashkull", new { @class = "form-check-input", id = "male", @checked = "checked" })
                                            @Html.LabelFor(x => x.Gender, "Mashkull", new { @class = "form-check-label" })
                                        </div>
                                        <div class="form-check form-check-inline">
                                            @Html.RadioButtonFor(x => x.Gender, "Femër", new { @class = "form-check-input", id = "female" })
                                            @Html.LabelFor(x => x.Gender, "Femër", new { @class = "form-check-label" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="text-right">
                                        <button type="submit" asp-controller="Home" asp-action="Index" id="submit" name="submit" class="btn btn-secondary">Anullo</button>
                                        <button type="submit" id="submit" name="submit" class="btn btn-primary">Përditso</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
