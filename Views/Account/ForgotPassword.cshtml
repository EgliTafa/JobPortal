@model JobPortal.ViewModels.EmployeeRegisterViewModel

    <head>
        <link rel="stylesheet" href="~/css/Password-Reset.css" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

    </head>

    <div class="move-center">
        <div class="row card text-center resetStyle border-0" id="width-resize">
            <div class="card-header h5 text-white bg-primary">Password Reset</div>
            <div class="card-body px-5">
                <p class="card-text py-2">
                    Enter your email address and we'll send you an email with instructions to reset your password.
                </p>
                <form method="post">
                    <div class="form-outline">
                        <input asp-for="Email" type="email" id="typeEmail" class="form-control my-3" placeholder="Email Input" />
                        @*<label class="form-label" for="typeEmail">Email input</label>*@
                    </div>
                    <button type="submit" class="btn btn-primary">Send Reset Link</button>
                </form>
                <div class="d-flex justify-content-between mt-4">
                    <a class="" asp-action="Index" asp-controller="Home">Homepage</a>
                    <a class="" asp-action="Login" asp-controller="Account">Login</a>

                </div>
                <div class="d-flex justify-content-between mt-4">
                </div>
            </div>
        </div>
    </div>