<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Detailed-Search.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        .center-on-pc{
            display:flex;
            justify-content:center;
            width:100%;
        }

        .category-width-mobile {
            width: 100%;
        }

        .time-width-mobile {
            width: 100%;
        }

        @@media screen and (max-width: 600px){
            .advanced-search-mobile{
                display:initial;
            }

            .category-width-mobile {
                width: 53%;
            }

            .time-width-mobile {
                width: 45%;
            }
        }
    </style>
</head>

<body>
    <form method="get" asp-controller="Home" asp-action="Search">
        <div class="container mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-10">
                    <div class="card p-3  py-4">
                        <h5 class="center-on-pc">
                            Gjeni &nbsp;<span class="accent"> punën &nbsp;</span> që
                            &nbsp;<span class="accent">dëshironi</span>
                        </h5>
                        <div class="row g-3 mt-2 center-on-pc"> 
                            <div class="col-md-6 w-75">
                                <input type="text" class="form-control" id="profession" name="SearchString" placeholder="Kërkoni sipas titullit">
                            </div>
                            <div class="col-md-3 w-25">
                                <button class="btn btn-block searchBtn" type="submit"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                        <div class="mt-3 center-on-pc advanced-search-mobile">
                            <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" class="advanced" style="position:absolute;">
                                Kërkim i avancuar <i class="fa fa-angle-down"></i>
                            </a>
                            <div class="collapse" id="collapseExample">
                                <div class=" card-body" style="border:none;">
                                    <div class="row">
                                        <div class="col category-width-mobile">
                                            <select typeof="text" name="searchCategory" class="form-control" id="location">
                                                <option value="" disabled selected>Kategoria</option>
                                                <option value="web-design">Web design</option>
                                                <option value="graphic-design">Graphic design</option>
                                                <option value="web-development">Web development</option>
                                                <option value="human-resource">Human Resources</option>
                                                <option value="support">Support</option>
                                                <option value="android">Android</option>
                                            </select>
                                        </div>
                                        <div class="col time-width-mobile">
                                            <select typeof="text" name="searchShifts" class="form-control rounded-lg" id="location">
                                                <option value="" disabled selected>Orari</option>
                                                <option value="Full time">Full time</option>
                                                <option value="Part time">Part time</option>
                                                <option value="Internship">Internship</option>
                                            </select>                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>