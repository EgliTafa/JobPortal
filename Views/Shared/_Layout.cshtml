@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Home - Job Portal</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet"
          href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet"
          href="~/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Google fonts - Roboto for copy, Montserrat for headings-->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,700">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Montserrat:400,700">
    <!-- owl carousel-->
    <link rel="stylesheet"
          href="~/vendor/owl.carousel/assets/owl.carousel.css">
    <link rel="stylesheet"
          href="~/vendor/owl.carousel/assets/owl.theme.default.css">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/css/style.default.css"
          id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="favicon.png">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    @RenderSection("Stylesheets", required: false)

</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div style="color:white;" class="container">
            <a href="/" class="navbar-brand">
                <img src="~/img/logo-small.png" alt="logo" class="d-none d-lg-block">
                <span class="sr-only">Home</span>
            </a>
            <button type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
                    class="navbar-toggler navbar-toggler-right">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav nav-fill text-light">
                    <a class="nav-link nav-fill" asp-controller="Jobs" asp-action="Index">All Jobs</a>
                    @if (this.User.IsInRole("Employer") && SignInManager.IsSignedIn(User))
                    {
                        <a class="nav-link nav-fill" asp-controller="Job" asp-action="Create">Post a new job</a>
                        <a class="nav-link nav-fill" asp-controller="Dashboard" asp-action="Applicants">Applicants </a>
                    }

                </div>
            </div>
            <div id="navbarSupportedContent" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto ml-1">
                    @if (this.User.IsInRole("Employer") && SignInManager.IsSignedIn(User))
                    {
                        <form method="post" style="display: none;" id="logout-form" asp-controller="Account" asp-action="Logout">
                        </form>
                        <li class="nav-item dropdown">
                            <a id="clientZone" href="#" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false"
                               class="nav-link dropdown-toggle has-img mb-3 mb-lg-0 mt-3 mt-lg-0">
                                <img src="@user.ImagePath"
                                     class="rounded-circle"
                                     height="40" width="40"
                                     asp-append-version="true" />
                                @user.FirstName - @user.LastName
                            </a>
                            <div aria-labelledby="clientZone" class="dropdown-menu">
                                <a asp-controller="Dashboard" asp-action="Index" class="dropdown-item">Dashboard</a>
                                <a asp-controller="Account" asp-action="EditProfile" class="dropdown-item">Edit Profile</a>

                                <a class="dropdown-item" asp-controller="Account"
                                   asp-action="ChangePassword">
                                    Change Password
                                </a>
                                <a href="#" class="dropdown-item" onclick="document.getElementById('logout-form').submit();">Logout</a>
                            </div>
                        </li>
                    }
                    else if (this.User.IsInRole("Employee") && SignInManager.IsSignedIn(User))
                    {
                        <form method="post" style="display: none;" id="logout-form" asp-controller="Account" asp-action="Logout">
                        </form>
                        <li class="nav-item dropdown">
                            <a id="clientZone" href="#" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false"
                               class="nav-link dropdown-toggle has-img mb-3 mb-lg-0 mt-3 mt-lg-0">
                                <img src="@user.ImagePath"
                                     class="rounded-circle bg-white"
                                     height="40" width="40"
                                     asp-append-version="true" />
                                @user.FirstName @user.LastName
                            </a>
                            <div aria-labelledby="clientZone" class="dropdown-menu">
                                <a asp-controller="Account" asp-action="EditProfile" class="dropdown-item">Edit Profile</a>
                                <a class="dropdown-item" asp-controller="Account"
                                   asp-action="ChangePassword">
                                    Change Password
                                </a>
                                <a href="#" class="dropdown-item" onclick="document.getElementById('logout-form').submit();">Logout</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        @*<a class="nav-link text-bold nav-fill" asp-controller="Home" asp-action="Index">Home</a>*@

                        <li class="nav-item dropdown">
                            <a id="pages" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                               class="nav-link dropdown-toggle">
                                <i class="fa fa-signing"></i>Register
                            </a>
                            <div aria-labelledby="pages" class="dropdown-menu">
                                <a asp-controller="Account" asp-action="EmployeeRegister" class="dropdown-item">Employee</a>
                                <a asp-controller="Account" asp-action="EmployerRegister" class="dropdown-item">Employers</a>
                                @*<a asp-controller="Account" asp-action="AdminRegister" class="dropdown-item">Admin</a>*@
                            </div>
                        </li>
                        <li class="nav-item" style="color: #fff">
                            <a asp-controller="Account" asp-action="Login" class="btn navbar-btn btn-outline-light mb-5 mb-lg-0">
                                <i class="fa fa-sign-in"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <partial name="_CookieConsentPartial" />
        @if (!string.IsNullOrEmpty(TempData["message"] as string))
        {
            if (TempData["type"] as string == "sucess")
            {
                <div class="alert alert-success">
                    @TempData["message"]
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    @TempData["message"]
                </div>
            }
        }
        @RenderBody()
    </div>

    <div class=" ">

        <!-- Footer -->
        <footer class="text-center text-lg-start text-white"
                style="background-color: #1c2331">
            <section class="">
                <div class="container text-center text-md-start mt-5">
                    <!-- Grid row -->
                    <div class="row mt-3">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <!-- Content -->
                            <h6 class="text-uppercase fw-bold text-white">Job Portal</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p style="color:white;">
                                *add a description for the site*
                            </p>
                        </div>

                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold text-white">Useful links</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p>
                                <a class="text-white" asp-controller="Home" asp-action="Index">Home</a>
                            </p>
                            <p>
                                <a class="text-white" asp-controller="Jobs" asp-action="Index">All Jobs</a>
                            </p>
                            <p>
                                @if (this.User.IsInRole("Employer") && SignInManager.IsSignedIn(User))
                                {
                                    <a href="#" style="color:white; text-decoration:none;" onclick="document.getElementById('logout-form').submit();">Logout</a>
                                }
                                else if (this.User.IsInRole("Employee") && SignInManager.IsSignedIn(User))
                                {
                                    <a href="#" style="color:white; text-decoration:none;" onclick="document.getElementById('logout-form').submit();">Logout</a>
                                }
                                else
                                {
                                    <a class="text-white" asp-controller="Account" asp-action="Login">Login</a>
                                }
                            </p>
                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold text-white">Contact</h6>
                            <hr class="mb-4 mt-0 d-inline-block mx-auto"
                                style="width: 60px; background-color: #7c4dff; height: 2px" />
                            <p style="color:white;">@*<i class="fa-sol mr-3"></i>*@ *address*</p>
                            <p style="color:white;">@*<i class="fas fa-envelope mr-3"></i>*@ *email*</p>
                            <p style="color:white;">@*<i class="fas fa-phone mr-3"></i>*@ *phone number*</p>
                            <p style="color:white;">@*<i class="fas fa-print mr-3"></i>*@ *phone number 2*</p>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
            </section>
            <!-- Section: Links  -->
            <!-- Copyright -->
            <div class="text-center p-3"
                 style="background-color: rgba(0, 0, 0, 0.2)">
                © 2022
            </div>
            <!-- Copyright -->
        </footer>
        <!-- Footer -->

    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/popper.js/umd/popper.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/vendor/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/js/front.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>