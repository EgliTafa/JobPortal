@model JobPortal.ViewModels.Home.TrendingJobViewModel
@using Humanizer
@using Microsoft.AspNetCore.Mvc.RazorPages;
@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Home-Index.css" />

    <style>
        .icon {
            display: flex;
            justify-content: center;
            background-color: white;
            color: black;
        }

        .center {
            display: flex;
            justify-content: center;
        }

        .card-body {
            width: 100%;
            display: inline;
        }

        .text-left {
            text-align: left;
        }

        .card:hover {
            border-color: orange;
            color: black;
        }

        .card-title:hover {
            color: orange;
        }

        a {
            text-decoration: none;
            color: lightgray;
        }

        .newJobPosting {
            display: flex;
            justify-content: end;
            color: white;
            font-weight: bolder;
        }

        .newText {
            background-color: darkred;
        }

        .carousel-inner img {
            margin: auto;
        }

        #carousel-control {
            background-color: mediumpurple;
            opacity: 0.6;
            transition: 0.3s;
        }

            #carousel-control:hover {
                background-color: rebeccapurple;
                opacity: 1;
            }

        @@media screen and (max-width: 600px) {
            #carouselIMG {
                width: 100%;
            }
        }
    </style>
</head>

<body>

    <div class="container">
        <partial name="_SearchBar">
    </div>

    @*CAROUSEL HERE*@
    <div class="container">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-70" src="./img/Carousel Images/we are.png" alt="First slide" id="carouselIMG">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-70" src="./img/Carousel Images/we are (1).png" alt="Second slide" id="carouselIMG">
                </div>
            </div>
            @*<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true" id="carousel-control"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true" id="carousel-control"></span>
                    <span class="sr-only">Next</span>
                </a>*@
        </div>
    </div>

    <br />
    <div class="container">
        <div class="row">
            <div class="col-md">
                <h4 class="heading">
                    Postimet<span class="accent"> më</span> të
                    <span class="accent">fundit</span>
                </h4>
                @foreach (var job in Model.JobList)
                {
                    <a asp-controller="Home" asp-action="JobDetails" asp-route-id="@job.Id">
                        <div class="card">
                            <div class="row no-gutters w-100 h-75">
                                <div class="">
                                    <img class="card-img rounded-1" src="@job.PosterImageURl" style="width:100px; height:80px; margin:5px;">
                                </div>
                                <div class="text-left">
                                    <div class="card-body" style="position:absolute; right:0;">
                                        <h5 class="card-title" style="display:flex; justify-content:center; margin-left:80px;">@job.Category</h5>

                                        <span style="margin:0 auto; margin-left:90px;"><i class="fa fa-map-marker"></i> @job.Location</span>

                                        <span style="margin:0 auto;"><i class="fa fa-eye"></i> @job.ViewCount</span>

                                        <span style="text-transform: capitalize; text-align: right; font-size:13px;"><i class="fa fa-clock-o"></i>  @job.CreatedAt.Humanize()</span>

                                        @if ((DateTime.Now - job.CreatedAt).TotalDays < 1)
                                        {
                                            <div class="newJobPosting">
                                                <div class="newText">
                                                    <i class="fa fa-star"></i>E Re &nbsp;
                                                </div>
                                            </div>
                                        }
                                        <div class="newJobPosting" style="visibility:hidden;">
                                            <div class="newText">
                                                <i class="fa fa-star"></i>E Re &nbsp;
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    <br />
                }
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#tags").autocomplete({
                source: '/Home/Search'
            });
        });
    </script>
}