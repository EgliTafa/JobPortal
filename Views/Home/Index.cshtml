@model JobPortal.ViewModels.Home.TrendingJobViewModel
@using Humanizer
@using Microsoft.AspNetCore.Mvc.RazorPages;
@{
        ViewData["Title"] = "Home Page";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Home-Index.css" />
</head>

<section class="job-form-section job-form-section--image">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="job-form-box">
                    <h2 class="heading">
                        Find a <span class="accent">job</span> you will
                        <span class="accent">love</span>.
                    </h2>
                    <form id="job-main-form" method="get" asp-controller="Home" asp-action="Search" class="job-main-form">
                        <div class="controls">
                            <div class="row align-items-center">
                                <div class="col-md-5">
                                    <div class="form-group fade-in">
                                        <input type="text" id="profession" name="SearchString"
                                               placeholder="Search by Keyword" class="form-control rounded-lg">
                                    </div>
                                </div>
                                  <div class="col-md-5 fade-in">
                                        <div class="form-group">
                                            <select typeof="text" name="searchCategory" class="form-control rounded-lg" id="location">
                                                <option value="" disabled selected>Select By Category</option>
                                                <option value="web-design">Web design</option>
                                                <option value="graphic-design">Graphic design</option>
                                                <option value="web-development">Web development</option>
                                                <option value="human-resource">Human Resources</option>
                                                <option value="support">Support</option>
                                                <option value="android">Android</option>
                                            </select>
                                        </div>
                                    </div>
                                <div class="col-md-2 fade-in" style="margin-bottom:30px">
                                    <button type="submit"
                                            class="btn btn-outline-white-primary job-main-form__button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="bg-light-gray">
    <div class="container">
        <h3 class="heading">Most Popular Jobs</h3>
        <div class="row featured align-items-stretch table-responsive-lg">
            <table class="table  bg-gradient">
                <tr>
                    <th class="ellipsis removed" scope="col"></th>
                    <th class="removed" scope="col"></th>
                    <th class="removed" scope="col"></th>
                    <th class="removed" scope="col"></th>
                    <th class="removed" scope="col"></th>
                    <th class="removed" scope="col"></th>
                </tr>

                @foreach (var job in Model.JobList)
                {
            <tr>
                <td>
                    <div class="top">
                        <a href="#">
                            <div class="bg"></div>
                            <div class="logo">
                                <a asp-controller="Home" asp-action="JobDetails" asp-route-id="@job.Id">
                                    <img class="ellipsis" src="@job.PosterImageURl" alt="" style="max-width: 100px;">
                                </a>
                            </div>
                        </a>
                    </div>
                </td>
                <td><a asp-controller="Home" asp-action="JobDetails" asp-route-id="@job.Id">@job.Title</a></td>
                <td class="ellipsis text-capitalize">@job.Category</td>
                <td class="ellipsis">@job.Description</td>
                <td>@job.Salary LEK</td>
                <td>@job.Location</td>
            </tr>

                }
            </table>  
            <paging total-records="Model.TotalRecords"
                    page-no="Model.P"
                    page-size="Model.S">
            </paging>
        </div>
    </div>
</section>