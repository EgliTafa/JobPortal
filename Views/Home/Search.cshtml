@using Humanizer
@model IEnumerable<JobPortal.Models.Job>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/Jobs-Index.css" />

    <style>
        .icon {
            display: flex;
            justify-content: center;
            background-color: white;
            color: black;
        }

        .center {
            display: flex;
            justify-content: center;
        }

        .card-body {
            width: 100%;
            display: inline;
        }

        .text-left {
            text-align: left;
        }

        .card:hover {
            border-color: orange;
            color: black;
        }

        .card-title:hover {
            color: orange;
        }

        a {
            text-decoration: none;
            color: lightgray;
        }

        .newJobPosting {
            display: flex;
            justify-content: end;
            color: white;
            font-weight: bolder;
        }

        .newText {
            background-color: darkred;
        }

        .go-left {
            margin: 0 auto;
            margin-left: 90px;
        }

        .card-image {
            width: 100px;
            height: 80px;
            margin: 5px;
        }

        .title {
            display: flex;
            justify-content: center;
            margin-left: 80px;
        }
    </style>
</head>

<section class="job-form-section job-form-section--compressed">
    <div class="container">
            <h4 class="heading">
                Gjeni<span class="accent"> punën</span> që
                <span class="accent">dëshironi</span>.
            </h4>
        <form id="job-main-form" method="get" class="job-main-form">
            <div class="controls">
                <div class="row align-items-center">
                    <div class="col-md-5">
                        <div class="form-group fade-in">
                            <input type="text" id="profession" name="SearchString"
                                   placeholder="Kërkoni sipas titullit" class="form-control rounded-lg">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <select typeof="text" name="searchCategory" class="form-control" id="location">
                                <option value="" disabled selected>Kërkoni sipas kategorisë</option>
                                <option value="web-design">Web design</option>
                                <option value="graphic-design">Graphic design</option>
                                <option value="web-development">Web development</option>
                                <option value="human-resource">Human Resources</option>
                                <option value="support">Support</option>
                                <option value="android">Android</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-5 fade-in">
                        <div class="form-group">
                            <select typeof="text" name="searchShifts" class="form-control rounded-lg" id="location">
                                <option value="" disabled selected>Kërkoni sipas orarit</option>
                                <option value="Full time">Full time</option>
                                <option value="Part time">Part time</option>
                                <option value="Internship">Internship</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2" style="margin-bottom:30px">
                        <button type="submit"
                                class="btn btn-outline-white-primary job-main-form__button">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<section>
    <div class="container">
        <h3 class="heading">U gjetën <span class="accent">@Model.Count()</span> punë sipas kërkimit</h3>
        @foreach (var job in Model)
        {
            <a asp-controller="Home" asp-action="JobDetails" asp-route-id="@job.Id">
                <div class="card">
                    <div class="row no-gutters w-100 h-75">
                        <div class="">
                            <img class="card-img rounded-1 card-image" src="@job.PosterImageURl">
                        </div>
                        <div class="text-left">
                            <div class="card-body" style="position:absolute; right:0;">
                                <h5 class="card-title title">@job.Category</h5>

                                <span class="go-left"><i class="fa fa-map-marker"></i> @job.Location</span>

                                <span><i class="fa fa-eye"></i> @job.ViewCount</span>

                                <span style="text-transform: capitalize; "><i class="fa fa-clock-o"></i>  @job.CreatedAt.Humanize()</span>

                                @if ((DateTime.Now - job.CreatedAt).TotalDays < 7)
                                {
                                    <div class="newJobPosting">
                                        <div class="newText">
                                            <i class="fa fa-star"></i>E Re &nbsp;
                                        </div>
                                    </div>
                                }
                                <div class="newJobPosting" style="visibility:hidden;">
                                    <div class="newText">
                                        <i class="fa fa-star"></i>E Re &nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            <br />
        }
    </div>
</section>