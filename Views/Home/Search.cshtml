@using Humanizer
@model IEnumerable<JobPortal.Models.Job>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/Jobs-Index.css" />
</head>

<section class="job-form-section job-form-section--compressed">
    <div class="container">
        <h4 class="heading">Find a <span class="accent">job </span> you will <span class="accent">love</span></h4>
        <form id="job-main-form" method="get" class="job-main-form">
            <div class="controls">
                <div class="row align-items-center">
                    <div class="col-md-5">
                        <div class="form-group">
                            <input type="text" id="profession" name="SearchString"
                                   placeholder="Search by Keyword" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <select typeof="text" name="searchCategory" class="form-control" id="location">
                                <option value="" disabled selected>Select By Category</option>
                                <option value="web-design">Web design</option>
                                <option value="graphic-design">Graphic design</option>
                                <option value="web-development">Web development</option>
                                <option value="human-resource">Human Resources</option>
                                <option value="support">Support</option>
                                <option value="android">Android</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2" style="margin-bottom:30px">
                        <button type="submit"
                                class="btn btn-outline-white-primary job-main-form__button">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<section>
    <div class="container">
        <h3 class="heading">We have found <span class="accent">@Model.Count()</span> jobs</h3>
        @foreach (var job in Model)
        {
            <div class="job-listing  ">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="row">
                            <div class="col-2">
                                <img style="max-width:80px;" src="@job.PosterImageURl"
                                     alt="Ipsioou " class="img-fluid">
                            </div>
                            <div class="col-10">
                                <h4 class="job__title move-left-mobile">
                                    <a href="/jobs/@job.Id/details">
                                        >
                                        @job.Title
                                    </a>
                                </h4>
                                <span class="job__company" style="display:none;">
                                    @job.CompanyName
                                </span>
                                <span class="job__company col-md-5" style="text-transform:capitalize;">
                                    Profesioni: <span style="font-weight:bold;"> @job.Category</span>
                                </span>
                                <span class="col-md-5">
                                    Education: <span style="font-weight:bold; font-size:13px;"> @job.Education</span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-10 col-md-3 col-lg-2 ml-auto">
                        <i class="fa fa-map-marker job__location" style="margin-left:5%;"></i>
                        @job.Location
                    </div>
                    <div class="col-10 col-md-3 col-lg-3 ml-auto">
                        <p style="margin-left:5%;">Posted @job.CreatedAt.Humanize()</p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>