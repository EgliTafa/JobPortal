@model JobPortal.ViewModels.Home.JobDetailsViewModel

@using Humanizer
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Job Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="bg-light-gray">
    <div class="container">
        <h2 class="heading">
            @Model.Job.Title<br>
            <small>at <a href=""> @Model.Job.CompanyName</a></small>
        </h2>
        <div class="job-detail-description">
            <i class="fa fa-map-marker job__location"> </i>
            @Model.Job.Location | Posted @Model.Job.CreatedAt.Humanize() |
            @if (Model.Job.Type == "Full time")
            {
                <span class="badge featured-badge badge-success">Full time</span>
            }
            else if (Model.Job.Type == "Part time")
            {
                <span class="badge featured-badge badge-primary">Part time</span>
            }
            else
            {
                <span style="color: #ffffff;" class="badge featured-badge badge-warning">Internship</span>
            }
        </div>
    </div>
</section>


<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <img src="@Model.Job.PosterImageURl" style="max-width:100%; max-height:85%;"/>
                <br /><br />
                      <table style="width:100%;" class="table table-striped table-responsive-xxl">
                          <tr>
                              <td style="white-space:nowrap;"><strong>Category</strong></td>
                              <th></th>
                              <th style="text-transform:capitalize;">@Model.Job.Category</th>
                          </tr>
                          <tr>
                              <td style="white-space:nowrap;"><strong>Last Date</strong></td>
                              <th></th>
                              <th style="text-transform:capitalize;">@Model.Job.LastDate.Date.ToString("dd/MM/yyyy")</th>
                          </tr>
                          <tr>
                              <td><strong>Salary</strong></td>
                              <th></th>
                              <th style="text-transform:capitalize;">@Model.Job.Salary LEK</th>
                          </tr>
                          <tr>
                              <td><strong>Education</strong></td>
                              <th></th>
                              <th style="text-transform:capitalize;">@Model.Job.Education</th>
                          </tr>
                          <tr>
                              <td><strong>Preferred Age</strong></td>
                              <th></th>
                              <th style="text-transform:capitalize;">@Model.Job.PreferredAge</th>
                          </tr>
                          <tr>
                              <td><strong>View Count</strong></td>
                              <th></th>
                              <th style="text-transform:capitalize;">@Model.Job.ViewCount</th>
                          </tr>
                      </table>
                <blockquote class="blockquote">
                    <p style=" white-space: pre-line;">@Model.Job.Description</p>
                </blockquote>
                
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-3">
                <div class="card" style="width:20em;">
                    <img class="card-img-top" src="@Model.Job.posterUrl" style="margin:0 auto; width:50%; height:50%;" alt="Card image cap">
                    <div class="card-body">
                        <h4>About @Model.Job.CompanyName</h4>
                        <p class="card-text">@Model.Job.CompanyDescription</p>
                        <p class="job-detail__social social ">
                            Website:<a href="@Model.Job.Website" data-toggle="tooltip" data-placement="top" title="Website"
                                       class="link">
                                @Model.Job.Website
                            </a>
                        </p>
                        <div class="job-detail__apply-bottom">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                if (Model.IsApplied)
                                {
                                    <input style="width:100%;" type="button" class="btn btn-outline-white-primary" value="Already applied" /><br />
                                }
                                else
                                {

                                    <form asp-controller="Job" asp-action="Apply" asp-route-id="@Model.Job.Id" method="post" enctype="multipart/form-data">
                                        @Html.AntiForgeryToken()
                                        <h4>Upload Your CV</h4>
                                        <input required type="file" name="upload" accept="application/pdf" class="form-control" />
                                        <input type="hidden" name="job" value="{{ job.id }}">
                                        <br />
                                        <input style="width:100%;" type="submit" class="btn btn-outline-white-primary"
                                               value="Apply Now" />
                                    </form>

                                }
                                <br />
                                <a style="width:100%;" class="btn btn-success btn-outline-success" href="tel:@Model.Job.CompanyPhoneNumber">Telefononi <br /> Kompaninë</a>
                            }
                        </div>
