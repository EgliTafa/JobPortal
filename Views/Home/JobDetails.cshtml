<body>

    <section class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col" style="padding-right:0;">
                    <img src="@Model.Job.PosterImageURl" class="job-image" />
                </div>

                <div class="col" style="padding-left:0; margin-right:35px;">
                    <h1 class="job-name-category" style="padding-bottom:60px;">@Model.Job.Category</h1>
                    <h4 class="job-name-category">@Model.Job.CompanyName</h4>
                </div>
            </div>
            <div class="row bg-white">
                <div class="col tag-name">
                    <span>Category:</span><br />
                    <span>Last Date:</span><br />
                    <span>Salary: </span><br />
                    <span>Job Type: </span><br />
                    <span style="text-transform:capitalize;">Education: </span><br />
                    <span style="text-transform:capitalize;">Preferred Age: </span><br />
                    <span class="mb-0" style="text-transform:capitalize;">View Count:  </span>
                </div>

                <div class="col tag-data font-weight-bold">
                    <span>@Model.Job.Category</span><br />
                    <span>@Model.Job.LastDate.ToString("dd/MM/yyyy")</span><br />
                    <span>@Model.Job.Salary LEK</span><br />
                    <span>@Model.Job.Type</span><br />
                    <span>@Model.Job.Education</span><br />
                    <span>@Model.Job.PreferredAge</span><br />
                    <span>@Model.Job.ViewCount</span>
                </div>
            </div>
            <div class="row bg-white social-buttons">
                <div class="social-buttons">
                    <a href="#">
                        <img src="~/img/social-buttons/facebook (1).svg" class="icons-style" />
                    </a>
                    <a href="#">
                        <img src="~/img/social-buttons/messenger-icon.png" class="icons-style" />
                    </a>
                    <a href="#">
                        <img src="~/img/social-buttons/viber-icon.png" class="icons-style" />
                    </a>
                    <a href="#">
                        <img src="~/img/social-buttons/whatspp.png" class="icons-style" />
                    </a>
                    <a href="#">
                        <img src="~/img/social-buttons/envelopes.svg" class="icons-style" />
                    </a>
                    <a href="#">
                        <img src="~/img/social-buttons/url-link-round-ui-href-share.png" class="icons-style" />
                    </a>
                </div>
            </div>
            <div class="row bg-white">
                <div class="container" id="a">
                    <br />
                    <div class="font-weight-bold">
                        <p class="font-weight-bold" style=" white-space: pre-line;">@Model.Job.Description</p>
                    </div>
                </div>
            </div>
            <div class="row bg-white justify-content-center">
                <form asp-controller="Job" asp-action="Apply" asp-route-id="@Model.Job.Id" method="post" enctype="multipart/form-data">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        if (Model.IsApplied)
                        {
                            <input style="width:100%;" type="button" class="btn btn-outline-white-primary" value="Already applied" /><br />
                        }
                        else
                        {
                            <!-- The Modal -->
                            <div id="myModal" class="modal">

                                <!-- Modal content -->
                                <div class="modal-content mt-5 ml-auto mr-auto card col-sm-3">

                                    <div class="modal-body">
                                        <span class="close">&times;</span>
                                        <h4>Upload Your CV</h4>
                                        <input required type="file" name="upload" accept="application/pdf" class="form-control" />
                                        <input type="hidden" name="job" value="{{ job.id }}">
                                        <br />
                                        <input style="width:100%;" type="submit" class="btn btn-outline-white-primary"
                                               value="Apply Now" />
                                        <br />
                                    </div>
                                    <br />
                                </div>

                            </div>

                            <input style="width:100%;" type="button" id="myBtn" class="btn btn-outline-white-primary"
                                   value="Apply Now" />
                        }
                    }
                </form>
                <br />
                <br />
                <div class="container justify-content-center m-2" style="display:flex; justify-content:center;">
                    <a style="width:70%;" class="btn btn-success btn-outline-success" href="tel:@Model.Job.CompanyPhoneNumber">Telefononi Kompaninë</a>
                </div>
            </div>
            @*<div class="row bg-white social-buttons">
                <div class="social-buttons" style="margin-top:20px;">
                    <a href="#">
