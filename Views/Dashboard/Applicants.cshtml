@model IEnumerable<Applicant>

@using Humanizer
@{
    ViewData["Title"] = "Applicants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/Applicants.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<section>
    <h3 style="text-align:center;">All Applicants On Your Jobs</h3>
    <div style="overflow-x:auto;">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Phone Number</th>
                    <th>Applied At</th>
                    <th>Applied</th>
                    <th>Applicant CV</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var applicant in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@applicant.User.ImagePath"
                                     alt=""
                                     style="width: 45px; height: 45px"
                                     class="rounded-circle" />
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@applicant.User.FirstName @applicant.User.LastName</p>
                                    <p class="text-muted mb-0"><email>@applicant.User.Email</email></p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p>@applicant.User.Gender</p>
                        </td>
                        <td>
                            <span><a href="tel:@applicant.User.PhoneNumber">@applicant.User.PhoneNumber</a></span>
                        </td>
                        <td>
                            <p class="fw-normal mb-1 fifty-chars"><a asp-controller="Home" asp-action="JobDetails" asp-route-id="@applicant.Job.Id">@applicant.Job.Title</a></p>
                        </td>
                        <td>
                            <p style="text-transform:capitalize;">@applicant.CreatedAt.Humanize()</p>
                        </td>
                        <td>
                            <a href="@applicant.CVPath" id="trig1" target="_blank">View CV</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>