@model IEnumerable<Job>
@using Humanizer

@{
    ViewData["Title"] = "All Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="container">
        <h3 class="heading">We have found <span class="accent">@Model.Count()</span> jobs</h3>
        @foreach (var job in Model)
        {
            <div class="job-listing  ">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="row">
                            <div class="col-2">
                                <img src="@job.PosterImageURl" class="img-fluid" style="max-width: 80px;">
                            </div>
                            <div class="col-10">
                                <h4 class="job__title">
                                    <a asp-controller="Home" asp-action="JobDetails" asp-route-id="@job.Id">@job.Title</a>
                                </h4>
                                <p class="job__company">
                                    @job.CompanyName
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-10 col-md-3 col-lg-2 ml-auto">
                        <i class="fa fa-map-marker job__location"></i>
                        @job.Location
                    </div>
                    <div class="col-10 col-md-3 col-lg-3 ml-auto">
                        <p>Posted @job.CreatedAt.Humanize()</p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

