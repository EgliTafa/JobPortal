@model JobPortal.Models.Job

@using JobPortal.Helpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/vendor/bootstrap-select/css/bootstrap-select.min.css">
}

@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

<head>
    <link rel="stylesheet" href="~/css/Job-Create.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        .icon {
            display: flex;
            justify-content: center;
            background-color: white;
            color: black;
        }

        .center {
            display: flex;
            justify-content: center;
        }

        .card-body {
            width: 100%;
            display: inline;
        }

        .text-left {
            text-align: left;
        }

        .card:hover {
            border-color: orange;
            color: black;
        }

        .card-title:hover {
            color: orange;
        }

        a {
            text-decoration: none;
            color: lightgray;
        }

        .newJobPosting {
            display: flex;
            justify-content: end;
            color: white;
            font-weight: bolder;
        }

        .newText {
            background-color: darkred;
        }

        .appearOnPc {
            display: inherit;
        }

        .appearOnMobile {
            display: none;
        }

        @@media screen and (max-width: 600px) {
            .appearOnPc {
                display: none;
            }

            .appearOnMobile {
                display: flex;

            }
        }
    </style>
</head>

<body>
    <section>
        <div class="container rounded bg-white mt-5 mb-5">
            <form id="job-main-form" method="post" asp-controller="Job" asp-action="Save" class="job-add-form" enctype="multipart/form-data">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <a href="#" onclick="history.back()"><i class="fa fa-arrow-circle-left fa-2x arror-hover" style="color:mediumpurple;"></i></a>
                <div class="row">
                    <div class="col-md-3 border-right">
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                            <div class="col-lg-12 form-group">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="text-center">Shto një Imazh</h4>
                                </div>
                                <div>
                                    <label for="file-input" asp-for="PosterImageURl">
                                        <img class="img-thumbnail" src="~/img/placeholder.jpg" />
                                    </label>
                                    <input type="file" name="upload" accept="image/png, image/gif, image/jpeg" class="form-control" />
                                </div>
                                <br />

                            </div>
                            @*<span class="font-weight-bold">Upload an Image for your post</span>*@
                        </div>
                    </div>
                    <div class="col-md-5 border-right">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-center">Shto një pozicion të ri</h4>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 form-group @Html.AddClassIfPropertyInError(x => x.Title, "is-invalid")">
                                    @Html.LabelFor(c => c.Title, "Titulli I Punës")
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Titulli I Punës" })
                                    <span class="help-inline">@Html.ValidationMessageFor(x => x.Title)</span>
                                </div>
                                <div class="col-lg-6 form-group">
                                    @Html.LabelFor(c => c.LastDate, "Afati I Postimit")
                                    @Html.TextBoxFor(m => m.LastDate, new { @class = "form-control", @type = "date" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    @Html.LabelFor(c => c.PreferredAge, "Mosha E Preferuar")
                                    <select id="type" name="PreferredAge" placeholder="Mosha E Preferuar"
                                            class="form-control">
                                        <option value="18-21">18-21</option>
                                        <option value="21-25">21-25</option>
                                        <option value="25-30">25-30</option>
                                        <option value="30-35">30-35</option>
                                    </select>
                                </div>
                                <div class="col-lg-6 form-group">
                                    @Html.LabelFor(c => c.Education, "Edukimi")
                                    <select id="type" name="Education" placeholder="Edukimi"
                                            class="form-control">
                                        <option value="High-School Degree">Gjimnaz</option>
                                        <option value="Bachelors Degree">Bachelor</option>
                                        <option value="Masters Degree">Master</option>
                                    </select>
                                </div>
                            </div>
                            @*<div class="row">
                                <div class="col-lg-12 form-group">
                                    @Html.LabelFor(c => c.Description, "Përshkimi i Punës")
                                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, @placeholder = "Përshkimi i Punës" })
                                    <span class="help-inline">@Html.ValidationMessageFor(x => x.Description)</span>
                                </div>
                            </div>*@
                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    @Html.LabelFor(c => c.Salary, "Rroga")
                                    @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", type = "number", @placeholder = "Rroga" })
                                    <span class="help-inline">@Html.ValidationMessageFor(x => x.Salary)</span>
                                </div>
                                <div class="col-lg-6 form-group">
                                    @Html.LabelFor(c => c.Location, "Vendndodhja")
                                    @Html.TextBoxFor(m => m.Location, new { @class = "form-control", @placeholder = "Vendndodhja" })
                                    <span class="help-inline">@Html.ValidationMessageFor(x => x.Location)</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 form-group">
                                    @Html.LabelFor(c => c.Type)
                                    <select id="type" name="Type" placeholder="Orari I Punës"
                                            class="form-control">
                                        <option value="Full time">Full time</option>
                                        <option value="Part time">Part time</option>
                                        <option value="Internship">Internship</option>
                                    </select>
                                </div>
                                <div class="col-lg-6 form-group">
                                    <label for="category">Kategoria</label>
                                    @*@Html.LabelFor(c => c.Categoy)*@
                                    <select id="category" name="category" placeholder="Zgjidh kategorinë"
                                            class="form-control">
                                        <option value="web-design">Web design</option>
                                        <option value="graphic-design">Graphic design</option>
                                        <option value="web-development">Web development</option>
                                        <option value="human-resource">Human Resources</option>
                                        <option value="support">Support</option>
                                        <option value="android">Android</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mt-5 text-center appearOnPc">
                                <button type="submit" class="btn btn-primary profile-button" >Ruaj dhe Publiko</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4" >
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center experience">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <h4>Përshkimi i Punës</h4>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-lg-6 form-group" style="display:none;">
                                    @Html.LabelFor(c => c.CompanyName)
                                    <select id="type" name="CompanyName" placeholder="Orari I Punës"
                                            class="form-control">
                                        <option value="@user.FirstName">Full time</option>
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="col form-group" style="text-align:center">
                                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 15, cols = 60, @placeholder = "Përshkimi i Punës" })
                                        <span class="help-inline">@Html.ValidationMessageFor(x => x.Description)</span>
                                    </div>

                                </div>

                            </div>
                            <div class="justify-content-center text-center appearOnMobile">
                                <button type="submit" class="btn btn-primary profile-button">Ruaj dhe Publiko</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </section>
</body>