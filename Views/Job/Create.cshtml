@model JobPortal.Models.Job

@using JobPortal.Helpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/vendor/bootstrap-select/css/bootstrap-select.min.css">
}

<head>
    <style>

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8
        }

        .profile-button {
            background: rgb(99, 39, 120);
            box-shadow: none;
            border: none
        }

            .profile-button:hover {
                background: #682773
            }

            .profile-button:focus {
                background: #682773;
                box-shadow: none
            }

            .profile-button:active {
                background: #682773;
                box-shadow: none
            }

        .back:hover {
            color: #682773;
            cursor: pointer
        }

        .labels {
            font-size: 11px
        }

        .add-experience:hover {
            background: #BA68C8;
            color: #fff;
            cursor: pointer;
            border: solid 1px #BA68C8
        }

    </style>
</head>

<section>
    <div class="container rounded bg-white mt-5 mb-5">
        <form id="job-main-form" method="post" asp-controller="Job" asp-action="Save" class="job-add-form" enctype="multipart/form-data">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <div class="col-lg-12 form-group">
                            <div>
                                <label for="file-input" asp-for="PosterImageURl">
                                    <img class="img-thumbnail" src="~/img/placeholder.jpg" />
                                </label>
                                <input type="file" name="upload" accept="image/png, image/gif, image/jpeg" class="form-control" />
                            </div>          
                        </div>
                        @*<span class="font-weight-bold">Upload an Image for your post</span>*@
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-center">Add a new position</h4>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 form-group @Html.AddClassIfPropertyInError(x => x.Title, "is-invalid")">
                                @Html.LabelFor(c => c.Title)
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                                <span class="help-inline">@Html.ValidationMessageFor(x => x.Title)</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group @Html.AddClassIfPropertyInError(x => x.PreferredAge, "is-invalid")">
                                @Html.LabelFor(c => c.PreferredAge)
                                @Html.TextBoxFor(m => m.PreferredAge, new { @class = "form-control" })
                                <span class="help-inline">@Html.ValidationMessageFor(x => x.PreferredAge)</span>
                            </div>
                            <div class="col-lg-6 form-group">
                                @Html.LabelFor(c => c.Education)
                                <select id="type" name="Education" placeholder="Education"
                                        class="form-control">
                                    <option value="High-School Degree">High-School Degree</option>
                                    <option value="Bachelors Degree">Bachelors Degree</option>
                                    <option value="Masters Degree">Masters Degree</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 form-group">
                                @Html.LabelFor(c => c.Description)
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5 })
                                <span class="help-inline">@Html.ValidationMessageFor(x => x.Description)</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                @Html.LabelFor(c => c.Salary)
                                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", type = "number" })
                                <span class="help-inline">@Html.ValidationMessageFor(x => x.Salary)</span>
                            </div>
                            <div class="col-lg-6 form-group">
                                @Html.LabelFor(c => c.Location)
                                @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
                                <span class="help-inline">@Html.ValidationMessageFor(x => x.Location)</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                @Html.LabelFor(c => c.Type)
                                <select id="type" name="Type" placeholder="Choose job type"
                                        class="form-control select2">
                                    <option value="Full time">Full time</option>
                                    <option value="Part time">Part time</option>
                                    <option value="Internship">Internship</option>
                                </select>
                            </div>
                            <div class="col-lg-6 form-group">
                                <label for="category">Category</label>
                                @*@Html.LabelFor(c => c.Categoy)*@
                                <select id="category" name="category" placeholder="Choose category"
                                        class="form-control select2">
                                    <option value="web-design">Web design</option>
                                    <option value="graphic-design">Graphic design</option>
                                    <option value="web-development">Web development</option>
                                    <option value="human-resource">Human Resources</option>
                                    <option value="support">Support</option>
                                    <option value="android">Android</option>
                                </select>
                            </div>
                        </div>
                        <div class="mt-5 text-center">
                            <button type="submit" class="btn btn-primary profile-button" type="button">Save And Publish</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center experience">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h4>Company details</h4>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-12 form-group">
                                @Html.LabelFor(c => c.CompanyName, "Company Name")
                                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 form-group">
                                <label asp-for="Website" class="control-label">Company Website</label>
                                <input asp-for="Website" class="form-control" />
                                <span class="help-inline">@Html.ValidationMessageFor(x => x.Website)</span>
                            </div>
                            <div class="col-lg-6 form-group">
                                @Html.LabelFor(c => c.LastDate, "Validity of the post")
                                @Html.TextBoxFor(m => m.LastDate, new { @class = "form-control", @type = "date" })
                            </div>
                        </div>
                        <div class="row" style="display:none">
                            <div class="col-lg-12">
                                <hr>
                                <div class="checkbox text-center">
                                    <label>
                                        <input type="checkbox"> I agree with the <a href="#">Terms and conditions</a>.
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>

        </form>
    </div>
</section>