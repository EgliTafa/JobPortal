@model JobPortal.Models.Job

@{
    ViewData["Title"] = "Edit";
}
<section>
    <div class="container rounded bg-white mt-5 mb-5">
        
        <form asp-action="Edit" asp-controller="Job" enctype="multipart/form-data">
            @*<div>
                <a asp-action="Index">Back to List</a>
            </div>*@
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-3 border-right">
                    <a asp-action="Index">Back to List</a>
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <div class="col-lg-12 form-group">
                            <div>
                                <label for="file-input" asp-for="PosterImageURl">
                                    <img class="img-thumbnail" src="@Model.PosterImageURl" />
                                </label>
                                <input type="file" name="upload" accept="image/png, image/gif, image/jpeg" class="form-control" />
                                <span class="font-weight-bold">Ndrysho Imazhin</span>
                            </div>
                        </div>
                        @*<span class="font-weight-bold">Upload an Image for your post</span>*@
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-center">Add a new position</h4>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label asp-for="PreferredAge" class="control-label"></label>
                                <input asp-for="PreferredAge" class="form-control" />
                                <span asp-validation-for="PreferredAge" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Education" class="control-label"></label>
                                <select asp-for="Education" id="category" name="education" placeholder="Choose category"
                                        class="form-control">
                                    <option value="High-School Degree">High-School Degree</option>
                                    <option value="Bachelors Degree">Bachelors Degree</option>
                                    <option value="Masters Degree">Masters Degree</option>
                                </select>
                                <span asp-validation-for="Education" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea class="form-control" asp-for="Description" placeholder="Enter Your Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label asp-for="Salary" class="control-label"></label>
                                <input type="number" asp-for="Salary" class="form-control" />
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Location" class="control-label"></label>
                                <input asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-6">
                                <label asp-for="Type" class="control-label"></label>
                                <select asp-for="Type" id="category" name="type" placeholder="Choose job type"
                                        class="form-control">
                                    <option value="Full Time">Full Time</option>
                                    <option value="Part Time">Part Time</option>
                                    <option value="Intership">Intership</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Category" class="control-label"></label>
                                <select asp-for="Category" id="category" name="category" placeholder="Choose category"
                                        class="form-control">
                                    <option value="web-design">Web design</option>
                                    <option value="graphic-design">Graphic design</option>
                                    <option value="web-development">Web development</option>
                                    <option value="human-resource">Human Resources</option>
                                    <option value="support">Support</option>
                                    <option value="android">Android</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mt-5 text-center">
                            <button type="submit" class="btn btn-primary profile-button" type="button">Save And Publish</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center experience">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h4>Company details</h4>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="form-group col-lg-8">
                                <label asp-for="CompanyName" class="control-label"></label>
                                <input asp-for="CompanyName" class="form-control" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-8">
                                <label asp-for="CompanyPhoneNumber" class="control-label"></label>
                                <input type="tel" asp-for="CompanyPhoneNumber" class="form-control" />
                                <span asp-validation-for="CompanyPhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-8 form-group">
                                <label asp-for="Website" class="control-label">Company Website</label>
                                <input asp-for="Website" class="form-control" />
                                <span class="help-inline">@Html.ValidationMessageFor(x => x.Website)</span>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-8">
                                <label asp-for="LastDate" class="control-label"></label>
                                <input asp-for="LastDate" class="form-control" />
                                <span asp-validation-for="LastDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Filled" /> @Html.DisplayNameFor(model => model.Filled)
                            </label>
                        </div>

                    </div>
                </div>
            </div>

        </form>
    </div>
</section>
<hr />
    

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
