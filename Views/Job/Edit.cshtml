@model JobPortal.Models.Job

@{
    ViewData["Title"] = "Edit";
}

@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

<head>
    <link rel="stylesheet" href="~/css/Job-Create.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        /*@@media screen and (max-width: 600px) {
            .row {
                display: flex;
                flex-direction: row;
            }

                .row :nth-child(1) {
                    order: 1;
                }

                .row :nth-child(2) {
                    order: 3;
                }

                .row :nth-child(3) {
                    order: 2;
                }
        }*/

        .appearOnPc {
            display: inherit;
        }

        .appearOnMobile {
            display: none;
        }

        @@media screen and (max-width: 600px) {
            .appearOnPc {
                display: none;
            }

            .appearOnMobile {
                display: inherit;
            }
        }
    </style>
</head>

<body>
    <section>
        <div class="container rounded bg-white mt-5 mb-5">

            <form name="form1" asp-action="Edit" asp-controller="Job" enctype="multipart/form-data">
                @*<div>
                        <a asp-action="Index">Back to List</a>
                    </div>*@
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="row order3">
                    <div class="col-md-3 border-right">
                        <div style="position:absolute; float:left;">
                            <a href="#" onclick="history.back()">
                                <i class="fa fa-arrow-circle-left fa-2x arror-hover" style=" float:left; color:mediumpurple;"></i>
                            </a>
                        </div>
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                            <div class="col-lg-12 form-group">
                                <div>
                                    <label for="file-input" asp-for="PosterImageURl">
                                        <img class="img-thumbnail" src="@Model.PosterImageURl" />
                                    </label>
                                    <input type="file" name="upload" accept="image/png, image/gif, image/jpeg" class="form-control" />
                                    <input asp-for="PosterImageURl" type="hidden" value="@Model.PosterImageURl" />
                                    <span class="font-weight-bold">Ndrysho Imazhin</span>
                                </div>
                            </div>
                            @*<span class="font-weight-bold">Upload an Image for your post</span>*@
                        </div>
                    </div>
                    <div class="col-md-5 border-right order2">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-center">Përditso Të Dhënat</h4>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Title" class="control-label">Titulli I Punës</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label asp-for="PreferredAge" class="control-label">Mosha E Preferuar</label>
                                    <input asp-for="PreferredAge" class="form-control" />
                                    <span asp-validation-for="PreferredAge" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label asp-for="Education" class="control-label">Edukimi</label>
                                    <select asp-for="Education" id="category" name="education" placeholder="Choose category"
                                            class="form-control">
                                        <option value="Gjimnaz">Gjimnaz</option>
                                        <option value="Bachelor">Bachelor</option>
                                        <option value="Master">Master</option>
                                    </select>
                                    <span asp-validation-for="Education" class="text-danger"></span>
                                </div>
                            </div>
                            @*<div class="form-group">
                                    <label asp-for="Description" class="control-label">Përshkrimi I Punës</label>
                                    <textarea class="form-control" asp-for="Description" placeholder="Enter Your Description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>*@
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label asp-for="Salary" class="control-label">Rroga</label>
                                    <input type="number" asp-for="Salary" class="form-control" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label asp-for="Location" class="control-label">Vendndodhja</label>
                                    <input asp-for="Location" class="form-control" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label asp-for="Type" class="control-label">Orari</label>
                                    <select asp-for="Type" id="category" name="type" placeholder="Choose job type"
                                            class="form-control">
                                        <option value="Full Time">Full Time</option>
                                        <option value="Part Time">Part Time</option>
                                        <option value="Intership">Intership</option>
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label asp-for="Category" class="control-label">Kategoria</label>
                                    <select asp-for="Category" id="category" name="category" placeholder="Choose category"
                                            class="form-control">
                                        <option value="web-design">Web design</option>
                                        <option value="graphic-design">Graphic design</option>
                                        <option value="web-development">Web development</option>
                                        <option value="human-resource">Human Resources</option>
                                        <option value="support">Support</option>
                                        <option value="android">Android</option>
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mt-5 text-center appearOnPc">
                                <button type="submit" class="btn btn-primary profile-button" type="button">Ruaj dhe Publiko</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 order1">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center experience">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <h4>Përditso Përshkrimin</h4>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-lg-6 form-group" style="display:none;">
                                    @Html.LabelFor(c => c.CompanyName)
                                    <select id="type" name="CompanyName" placeholder="Orari I Punës"
                                            class="form-control">
                                        <option value="@user.FirstName">Full time</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Përshkrimi I Punës</label>
                                    <textarea class="form-control" asp-for="Description" placeholder="Jep përshkrimin e punës" rows="20" cols="60"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Filled" /> E Zënë?
                                    </label>
                                </div>

                                <div class="mt-5 text-center appearOnMobile">
                                    <button type="submit" class="btn btn-primary profile-button" type="button">Ruaj Ndryshimet</button>
                                </div>
                            </div>
                        </div>
                    </div>

            </form>
        </div>
    </section>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
